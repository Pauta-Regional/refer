<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      WindowTitle="25mm Focal Length"
      Title="25mm Focal Length">
    <Page.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="StrokeLineJoin" Value="Round" />
        </Style>
        <Style TargetType="Line">
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
        </Style>
        <Style TargetType="Path">
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
        </Style>
    </Page.Resources>

    <Canvas Margin="96">
        <Rectangle Width="94" Height="136" Stroke="Black" />
        <Rectangle Canvas.Left="92" Canvas.Top="66" 
                   Width="4" Height="4" Fill="White" />

        <Line X1="0" Y1="0" X2="184" Y2="136" Stroke="Black" />
        <Line X1="0" Y1="136" X2="184" Y2="0" Stroke="Black" />

        <Path Stroke="Black" RenderTransform="1 0 0 1 72 68"
              Data="M 40 -10 A 50 50 0 0 1 40 10" />

        <TextBlock Canvas.Left="118" Canvas.Top="60" Text="72&#x00B0;"
                   VerticalAlignment="Center" />


        <TextBlock Canvas.Left="-20" Canvas.Top="100" Text="Film or CCD"
                   RenderTransform="0 -1 1 0 0 0" />
    </Canvas>
</Page>
