<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cp="http://schemas.charlespetzold.com/2007/xaml"
      WindowTitle="Law of Cosines for Vectors"
      Title="Law of Cosines for Vectors">
    <Page.Resources>
        <Style TargetType="cp:ArrowPolyline">
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
            <Setter Property="StrokeLineJoin" Value="Round" />
        </Style>
    </Page.Resources>

    <Canvas>
        <cp:ArrowPolyline Points="192 192, 96 96" Stroke="Black" />
        <cp:ArrowPolyline Points="192 192, 288 48" Stroke="Black" />
        <cp:ArrowPolyline Points="96 96, 288 48" Stroke="Black" />
        <TextBlock Text="A" FontWeight="Bold" Canvas.Left="130" Canvas.Top="140" />
        <TextBlock Text="B" FontWeight="Bold" Canvas.Left="240" Canvas.Top="120" />
        <TextBlock Text="B &#x2013; A" FontWeight="Bold" Canvas.Left="170" Canvas.Top="55" />
        <TextBlock Text="&#x03B1;" Canvas.Left="187" Canvas.Top="166" />
    </Canvas>
</Page>
