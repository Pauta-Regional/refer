<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cp="http://schemas.charlespetzold.com/2007/xaml"
      Title="Surface Normal with Shading"
      WindowTitle="Surface Normal with Shading">
    <Page.Resources>
        <Style TargetType="Polygon">
            <Setter Property="StrokeLineJoin" Value="Round" />
        </Style>

        <Style TargetType="cp:ArrowPolyline">
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
            <Setter Property="StrokeLineJoin" Value="Round" />
        </Style>
    </Page.Resources>

    <Canvas>
        <!-- Triangle. -->
        <Polygon Points="100 150 200 200 300 100" Stroke="Black" Fill="LightGray" />

        <!-- Surface normal. -->
        <cp:ArrowPolyline Points="200 150, 200 50" 
                  Stroke="Black" StrokeThickness="2"  />

        <!-- Light. -->
        <cp:ArrowPolyline Points="270 35, 220 110"
                  Stroke="Black" StrokeThickness="2" />
    </Canvas>
</Page>
