<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cp="http://schemas.charlespetzold.com/2007/xaml"
      WindowTitle="Cross Product Direction"
      Title="Cross Product Direction">
    <Page.Resources>
        <Style TargetType="cp:ArrowPolyline">
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
            <Setter Property="StrokeLineJoin" Value="Round" />
        </Style>
    </Page.Resources>

    <Canvas>
        <cp:ArrowPolyline Points="96 192, 192 192" Stroke="Black" />
        <cp:ArrowPolyline Points="96 192, 244 96" Stroke="Black" />
        <cp:ArrowPolyline Points="96 192, 96 48" Stroke="Black" />

        <TextBlock Text="A" FontWeight="Bold" Canvas.Left="140" Canvas.Top="190" />
        <TextBlock Text="B" FontWeight="Bold" Canvas.Left="165" Canvas.Top="122" />
        <TextBlock Text="A&#x00D7;B" FontWeight="Bold" Canvas.Left="68" Canvas.Top="110" />
    </Canvas>
</Page>
