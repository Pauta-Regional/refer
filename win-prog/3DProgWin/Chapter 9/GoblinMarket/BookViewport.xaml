<Viewport3D xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="Petzold.BookViewer3D.BookViewport">
    <ModelVisual3D>
        <ModelVisual3D.Content>
            <Model3DGroup>
                <AmbientLight Color="#404040" />
                <DirectionalLight Color="#C0C0C0" Direction="1 -1 -4" />
            </Model3DGroup>
        </ModelVisual3D.Content>
    </ModelVisual3D>

    <Viewport3D.Camera>
       <PerspectiveCamera Position="0 -6 24"
                          LookDirection="0 6 -24"
                          UpDirection="0 1 0"
                          FieldOfView="45" 
                          FarPlaneDistance="30" />
    </Viewport3D.Camera>
</Viewport3D>
